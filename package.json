{
  "name": "au",
  "version": "0.1.0",
  "description": "Agent Understanding - AI-powered codebase documentation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "au": "./bin/run.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "oclif": {
    "bin": "au",
    "dirname": "au",
    "commands": "./dist/commands",
    "topicSeparator": " "
  },
  "scripts": {
    "build": "tsc && cp -r src/templates dist/",
    "prepare": "[ -d src ] && npm run build || true",
    "dev": "./bin/dev.js",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@oclif/core": "^4.2.10",
    "chalk": "^5.6.2",
    "eta": "^4.5.0",
    "fast-glob": "^3.3.3",
    "ignore": "^6.0.2",
    "llmist": "^15.8.1",
    "micromatch": "^4.0.8",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.10",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "llmist": {
    "gadgets": "./dist/index.js",
    "subagents": {
      "AskAboutCodebase": {
        "entryPoint": "./dist/index.js",
        "export": "AU",
        "description": "Query codebase understanding from AI-captured documentation",
        "uses": ["AURead", "AUList", "ReportResult"],
        "defaultModel": "sonnet",
        "maxIterations": 10
      }
    },
    "presets": {
      "all": "*",
      "subagent": ["AskAboutCodebase"],
      "readonly": ["AURead", "AUList"]
    }
  }
}
